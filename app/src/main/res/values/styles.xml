<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="CustomTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <color name="custom_theme_color">#cfb0b0ff</color>
    
    <style name="CustomTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
    </style>

    <style name="activity">
        <item name="android:background">@drawable/blackbird</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="colored_text">
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>
    
</resources>
